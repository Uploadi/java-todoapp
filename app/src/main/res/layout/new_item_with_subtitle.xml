<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/item_checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:text="My Item Placeholder"
        android:textColorHighlight="#23877C7C"
        android:textColorLink="#6E6C6C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:buttonTint="#99555B65"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_Subtext_Checkbox"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="Erledigte Todos:"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_checkbox1" />

</android.support.constraint.ConstraintLayout>
